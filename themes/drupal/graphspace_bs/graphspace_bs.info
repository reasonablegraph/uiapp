;;;;;;;;;;;;;;;;;;;;;
;; Theme Settings
;;;;;;;;;;;;;;;;;;;;;

; Breadcrumbs
; --------------
settings[bootstrap_breadcrumb] = 0
settings[bootstrap_breadcrumb_home] = 0
settings[bootstrap_breadcrumb_title] = 0

; Navbar
; --------------
settings[bootstrap_navbar_position] = 'static-top'
settings[bootstrap_navbar_inverse] = 1

; Global
; --------------
settings[toggle_name] = 1
settings[toggle_search] = 1


